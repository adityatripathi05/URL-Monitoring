version: "3.9"
services:
  backend:
    build: ./backend
    ports:
      - "8000:8000"
    volumes:
      - ./backend:/app
    env_file: .env
    networks:
      - monitoring-network
    depends_on:
      - db
  db:
    image: timescale/timescaledb:latest-pg17
    ports:
      - "5432:5432"
    env_file: .env
    volumes:
      - db_data:/var/lib/postgresql/data
    networks:
      - monitoring-network

volumes:
  db_data:
    driver: local

networks:
  monitoring-network:
    driver: bridge
